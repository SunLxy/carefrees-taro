{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "----@carefrees/taro-ui----": "--------start-------",
    "build:ui": "npm run-script build --workspace @carefrees/taro-ui",
    "watch:ui": "npm run-script watch --workspace @carefrees/taro-ui",
    "build:plugins": "npm run-script build --workspace @carefrees/taro-plugins",
    "watch:plugins": "npm run-script watch --workspace @carefrees/taro-plugins",
    "build:utils": "npm run-script build --workspace @carefrees/taro-utils",
    "watch:utils": "npm run-script watch --workspace @carefrees/taro-utils",
    "build:all": " npm run build:utils && npm run build:plugins && npm run build:ui ",
    "build:docs": "npm run-script build --workspace docs",
    "start:docs": "npm run-script dev --workspace docs",
    "start": "npm run-script dev:h5 --workspace example",
    "start:weapp": "npm run-script dev:weapp --workspace example",
    "version": "lerna version --force-publish=* --no-changelog --no-git-tag-version --no-push",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\""
  },
  "dependencies": {
    "@carefrees/rslib": "~0.0.12",
    "husky": "~8.0.0",
    "lerna": "~5.4.0",
    "prettier": "~2.7.0",
    "pretty-quick": "~3.1.3",
    "lint-staged": "~13.0.0",
    "typescript": "~5.9.2"
  },
  "overrides": {
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7"
  },
  "resolutions": {
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7"
  },
  "lint-staged": {
    "*.{js,jsx,tsx,ts,less,md,json}": "prettier --write"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "packages/*",
    "example",
    "docs"
  ]
}